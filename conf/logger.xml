            <!--<driverClass>com.mysql.jdbc.Driver</driverClass>-->
            <!--<url>jdbc:mysql://localhost:3306/bugatti</url>-->
            <!--<user>bugatti</user>-->
            <!--<password>bugatti</password>-->
        <!--</connectionSource>-->
    <!--</appender>-->

    <!-- pool -->
    <appender name="DB" class="ch.qos.logback.classic.db.DBAppender">
        <connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
            <dataSource class="com.jolbox.bonecp.BoneCPDataSource">
                <driverClass>com.mysql.jdbc.Driver</driverClass>
                <jdbcUrl>jdbc:mysql://localhost:3306/bugatti</jdbcUrl>
                <user>bugatti</user>
                <password>bugatti</password>
            </dataSource>
        </connectionSource>
    </appender>

    <logger name="ActionLog" level="INFO" additivity="false">
        <appender-ref ref="DB" />
    </logger>

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT" />
    </root>

</configuration>